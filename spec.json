{
  "project": {
    "name": "emailer",
    "repo_url": "https://github.com/tanishapritha/emailer"
  },
  "features": [
    {
      "name": "User Authentication",
      "status": "mvp"
    },
    {
      "name": "Email Sending Automation",
      "status": "mvp"
    },
    {
      "name": "Scope Management",
      "status": "mvp"
    },
    {
      "name": "Email Template Management",
      "status": "mvp"
    },
    {
      "name": "AI Email Generation",
      "status": "mvp"
    }
  ],
  "database": [
    {
      "table": "scopes",
      "fields": [
        {
          "name": "id",
          "type": "integer"
        },
        {
          "name": "name",
          "type": "string"
        },
        {
          "name": "description",
          "type": "text"
        },
        {
          "name": "created_at",
          "type": "string"
        }
      ]
    },
    {
      "table": "email_templates",
      "fields": [
        {
          "name": "id",
          "type": "integer"
        },
        {
          "name": "scope_id",
          "type": "integer"
        },
        {
          "name": "subject",
          "type": "string"
        },
        {
          "name": "body",
          "type": "text"
        }
      ]
    },
    {
      "table": "email_recipients",
      "fields": [
        {
          "name": "id",
          "type": "integer"
        },
        {
          "name": "scope_id",
          "type": "integer"
        },
        {
          "name": "email",
          "type": "string"
        },
        {
          "name": "sent_at",
          "type": "string"
        }
      ]
    }
  ],
  "endpoints": [
    {
      "method": "GET",
      "route": "/user-authentication"
    },
    {
      "method": "GET",
      "route": "/scope-management"
    },
    {
      "method": "GET",
      "route": "/email-template-management"
    },
    {
      "method": "GET",
      "route": "/ai-email-generation"
    },
    {
      "method": "GET",
      "route": "/email-sending-automation"
    }
  ]
}